{% extends 'adminBase.html.twig' %}
{% block title %}PROFILE ADMIN{% endblock %}
{% block adminPageTitle %}PROFILE ADMINISTRATEUR{% endblock %}
{% block body %}
    <div class="content col-9">
        <div class="container">
            <div class="row py-5 px-4">
                <div
                    class="col-xl-12 col-md-12 col-sm-12 mx-auto">
                    <!-- Profile widget -->
                    <div class="bg-white shadow rounded overflow-hidden">
                        <div class="px-4 pt-0 pb-4 bg-dark">
                            <div class="media align-items-end profile-header">
                                <div class="profile mr-3">
                                    <img src="{{ asset('img/headphone.jpg') }}" alt="Casque de musique sur fond jaune" width="130" class="rounded mb-2 img-thumbnail">
                                    <a href="{{ path('admin_edit_profile', {'id': app.user.id}) }}" class="btn btn-dark btn-sm btn-block">Éditer mon profile</a>
                                </div>
                                <div class="media-body mb-5 text-white">
                                    <p class="mt-0 mb-0">{{ app.user.firstname }} <span style="text-transform:uppercase">{{ app.user.lastname }}</span></p>
                                    <p class="small mb-4">
                                        <i class="fa fa-map-marker mr-2"></i>
                                        {{ app.user.city }}
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="bg-light p-4 d-flex justify-content-end text-center">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <h5 class="font-weight-bold mb-0 d-block">
                                        {{ countUsers }}
                                    </h5>
                                    <small class="text-muted">
                                        <i class="fa fa-picture-o mr-1"></i>
                                        Commentaires
                                    </small>
                                </li>
                                <li class="list-inline-item">
                                    <h5 class="font-weight-bold mb-0 d-block">
                                        {{ countComments }}
                                    </h5>
                                    <small class="text-muted">
                                        <i class="fa fa-user-circle-o mr-1"></i>
                                        Abonnés
                                    </small>
                                </li>
                            </ul>
                        </div>
                        <div class="py-4 px-4">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <h5 class="mb-0">
                                    Mes derniers projets
                                </h5>
                                <a href="{{ path('admin_projects') }}" class="btn btn-link text-muted">
                                    Tout découvrir :
                                    {{ countProjects }}
                                </a>
                            </div>
                            <div class="row">
                                {% for project in projects %}
                                    <div class="col-lg-6 mb-2 pr-lg-1">
                                        <img src="{{ project.imageUrl }}" alt="" class="img-fluid rounded shadow-sm">
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="py-4">
                                <h5 class="mb-3">
                                    Dernier commentaire posté
                                </h5>
                                <div class="p-4 bg-light rounded shadow-sm">
                                    {% for theLastComment in lastComment %}
                                        <p class="font-italic mb-0">
                                            {{ theLastComment.comment }}
                                        </p>
                                        <ul class="list-inline small text-muted mt-3 mb-0">
                                            <li class="list-inline-item">
                                                <i class="far fa-clock"></i>
                                                {{ theLastComment.createdAt | date('d/m/Y') }}
                                            </li>
                                            <li class="list-inline-item">
                                                <i class="fa fa-heart-o mr-2"></i>
                                                {{ theLastComment.user.username }}</li>
                                        </ul>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <section>
                            <div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">pseudo</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.username }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">nom</span>
                                    </div>
                                    <div class="col">
                                        {{ app.user.lastname }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">Prénom</span>
                                    </div>
                                    <div class="col">
                                        {{ app.user.firstname }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">email</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.email }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">adresse</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.address }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">code postale</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.codeZip }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">ville</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.city }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">pays</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.country }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">téléphone</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.mobilePhone }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                            </div>
                        </section>
                    </div>
                    <!-- End profile widget -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
