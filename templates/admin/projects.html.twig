{% extends 'adminBase.html.twig' %}
{% block title %}PROJETS
{% endblock %}
{% block adminPageTitle %}PROJETS
{% endblock %}
{% block body %}
    <div class="content col-9">
        <div class="container">
            <h2>
                <span style="text-transform:uppercase">Portfolio de projets</span>
            </h2>
            <div class="row">
                {% for project in projects %}
                    <div class="card mb-6 projectCard message_box" style="max-width: 500px;">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="{{ project.imageUrl }}" class="card-img" alt="Illustration du projet">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        {{ project.name }}
                                    </h5>
                                    <p class="card-text">
                                        {{ project.description }}
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            {{ project.address }}
                                        </small>
                                    </p>
                                    <div>
                                        <a href="{{ path('admin_edit_project', {'id': project.id}) }}" class="btn btn-success">
                                            <span style="text-transform:uppercase">éditer</span>
                                        </a>
                                        <a href="{{ path('admin_delete_project', {'id': project.id}) }}" class="btn btn-danger">
                                            <span style="text-transform:uppercase">éffacer</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
