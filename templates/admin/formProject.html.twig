{% extends 'adminBase.html.twig' %}
{% form_theme formProject 'bootstrap_4_layout.html.twig' %}
{% block title %}
    {% if editMode %}
        ÉDITER PROJET
    {% else %}
        AJOUTER PROJET
    {% endif %}
{% endblock %}
{% block adminPageTitle %}
    {% if editMode %}
        ÉDITER UN PROJET
    {% else %}
        AJOUTER UN PROJET
    {% endif %}
{% endblock %}
{% block body %}
    <div class="content col-9">
        <h2>
            {% if editMode %}
                <span style="text-transform:uppercase">Modifier le projet :<br />{{ project.name }}</span>
            {% else %}
                <span style="text-transform:uppercase">Un nouveau projet</span>
            {% endif %}
        </h2>
        <div class="container">
            {{ form_start(formProject) }}
            {{ form_row(formProject.name, { 'attr' : {'placeholder' : "Titre du Projet"}, 'label' : "Nom"}) }}
            {{ form_row(formProject.description, { 'attr' : {'placeholder' : "Description du Projet"}, 'label' : "Description"}) }}
            {{ form_row(formProject.imageUrl, { 'attr' : {'placeholder' : "URL de l\'image"}, 'label' : "Image"}) }}
            {{ form_row(formProject.address, { 'attr' : {'placeholder' : "URL du projet"}, 'label' : "Adresse URL"}) }}
            <button type="submit" class="btn btn-success">
                {% if editMode %}
                    Modifier
                {% else %}
                    Ajouter le projet
                {% endif %}
            </button>
            {{ form_end(formProject) }}
        </div>
    </div>
{% endblock %}
