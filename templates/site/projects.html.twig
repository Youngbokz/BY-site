{% extends 'base.html.twig' %}
{% block title %}Projets{% endblock %}
{% block body %}
<div class="container-main-contain">
      <div class="container-fluid mainProjectCont">
      {% for project in projects %}
      <a class="portfolio-item" href="{{ path('show_project',{'id': project.id}) }}">
        <div class="projectContainer">
          <img src="{{ project.imageUrl }}" alt="">
          <div class="post-s">
            <h2>{{ project.name }}</h2>
            <p class="mb-0">{{ project.createdAt | date('d/m/Y') }}</p> 
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}
