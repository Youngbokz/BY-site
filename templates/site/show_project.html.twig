{% extends 'base.html.twig' %}
{% block title %}Show a Project{% endblock %}
{% block css %}
    <!--My persnnal CSS-->
    <link href="../css/style.css" rel="stylesheet" type="text/css">
    <!--Bootstrap CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
{% endblock %}
{% block body %}
  {# <!-- Portfolio -->
  <section class="content-section" id="portfolio">
        {{ project.id }}
    <div class="container">
      <div class="content-section-heading text-center">
        <h1 class="text-secondary mb-0">{{ project.name }}</h1>
        <h3 class="mb-5"></h3>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6">
          <a class="portfolio-item" href="{{ project.address }}">
            <span class="caption">
              <span class="caption-content">
                <h2>{{ project.name }}</h2>
                <p class="mb-0">{{ project.description }}</p>
                <p>{{ project.createdAt | date('d/m/Y') }}</p>
              </span>
            </span>
            <img class="img-fluid" src="{{ project.imageUrl }}" alt="">
          </a>
        </div>
      </div>
    </div>
  </section> #}
<div class="container-fluid mainProjectCont-show_project">
    <div class="projectContainer-show_project">
        <h1>{{ project.name }}</h1>
        <img src="../img/leone-venter-VieM9BdZKFo-unsplash.jpg" alt="">
        <p class="mb-0">{{ project.createdAt | date('d/m/Y') }}<br>{{ project.description }}</p> 
    </div>
</div>
{% endblock %}
{% block script %}
  <!--jQuery CDN Js-->
