{% extends 'profileBase.html.twig' %}
{% block title %}PROFILE UTILISATEUR{% endblock %}
{% block adminPageTitle %}MON PROFILE{% endblock %}
{% block body %}
    <div class="content col-9">
        <div class="container">
            <div class="row py-5 px-4">
                <div
                    class="col-xl-12 col-md-12 col-sm-12 mx-auto">
                    <!-- Profile widget -->
                    <div class="bg-white shadow rounded overflow-hidden">
                        <div class="px-4 pt-0 pb-4 bg-dark">
                            <div class="media align-items-end profile-header">
                                <div class="profile mr-3"><img src="{{ asset('img/profile.jpg') }}" alt="Visage de profile" width="130" class="rounded mb-2 img-thumbnail"><a href="{{ path('edit_profile', {'id': app.user.id}) }}" class="btn btn-dark btn-sm btn-block">Éditer mon profile</a>
                                </div>
                                <div class="media-body mb-5 text-white">
                                    <p class="mt-0 mb-0">{{ app.user.firstname }}
                                        <span style="text-transform:uppercase">{{ app.user.lastname }}</span>
                                    </p>
                                    <p class="small mb-4">
                                        <i class="fa fa-map-marker mr-2"></i>
                                        <span style="text-transform:uppercase">{{ app.user.city }}</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-light p-4 d-flex justify-content-end text-center">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item">
                                    <h5 class="font-weight-bold mb-0 d-block">{{ countComments }}</h5>
                                    <small class="text-muted">
                                        <i class="fas fa-comment-dots mr-1"></i>Commentaires
                                    </small>
                                </li>
                            </li</ul>
                        </div>

                        <section>
                            <div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">pseudo</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.username }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">nom</span>
                                    </div>
                                    <div class="col">
                                        <span style="text-transform:uppercase">{{ app.user.lastname }}</span>
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">Prénom</span>
                                    </div>
                                    <div class="col">
                                        {{ app.user.firstname }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">email</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.email }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">adresse</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.address }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">code postale</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.codeZip }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">ville</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.city }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <span style="text-transform:uppercase">téléphone</span>
                                    </div>
                                    <div class="col">
                                        {{  app.user.mobilePhone }}
                                    </div>
                                    <hr align="center" size="8" width="100%"/>
                                </div>
                            </div>
                        </section>
                    </div>
                    <!-- End profile widget -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
