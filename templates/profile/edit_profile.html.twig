{% extends 'profileBase.html.twig' %}
{% block title %}ÉDITER PROFILE UTILISATEUR
{% endblock %}
{% block adminPageTitle %}ÉDITER MON PROFILE
{% endblock %}
{% block body %}
    <div class="content col-9">
        <main>
            <div class="container">
                <div class="row py-5 px-4">
                    <div
                        class="col-xl-12 col-md-12 col-sm-12 mx-auto">
                        <!-- Profile widget -->
                        <div class="bg-white shadow rounded overflow-hidden">
                            <div class="px-4 pt-0 pb-4 bg-dark">
                                <div class="media align-items-end profile-header">
                                    <div class="profile mr-3"><img src="{{ asset('img/profile.jpg') }}" alt="Casque de musique sur fond jaune" width="130" class="rounded mb-2 img-thumbnail"><p>Changer mon profile</p>
                                    </div>
                                    <div class="media-body mb-5 text-white">
                                        <p class="mt-0 mb-0">{{ app.user.firstname }}
                                            {{ app.user.lastname }}</p>
                                        <p class="small mb-4">
                                            <i class="fa fa-map-marker mr-2"></i>
                                            {{ app.user.city }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-light p-4 d-flex justify-content-end text-center">
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item">
                                        <h5 class="font-weight-bold mb-0 d-block">{{ countUserComments }}</h5>
                                        <small class="text-muted">
                                            <i class="fas fa-comment-dots mr-1"></i>Commentaires</small>
                                    </li>
                                </ul>
                            </div>
                            <section>
                                <div>
                                    {{ form_start(formEditUserForUser) }}
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">pseudo</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.username, { 'attr' : {'placeholder' : "Votre pseudo ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">nom</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.lastname, { 'attr' : {'placeholder' : "Votre nom ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">Prénom</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.firstname, { 'attr' : {'placeholder' : "Votre prénom ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">email</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.email, { 'attr' : {'placeholder' : "Votre email ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">adresse</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.address, { 'attr' : {'placeholder' : "Votre adresse ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">code postale</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.codeZip, { 'attr' : {'placeholder' : "Votre code postale ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">ville</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.city, { 'attr' : {'placeholder' : "Votre ville ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">pays</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.country, { 'attr' : {'placeholder' : "Votre pays ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">téléphone</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.mobilePhone, { 'attr' : {'placeholder' : "Votre numéro de mobile ici"}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <span style="text-transform:uppercase">Sexe</span>
                                        </div>
                                        <div class="col">
                                            {{ form_row(formEditUserForUser.gender, { 'attr' : {'placeholder' : " "}, 'label' : false}) }}
                                            <hr/>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success">
                                        <span style="text-transform:uppercase">éditer</span>
                                    </button>
                                    <a class="btn btn-danger" href="" role="button">Supprimer mon profile</a>
                                    {{ form_end(formEditUserForUser) }}
                                    
                                </div>
                            </section>
                        </div>
                        <!-- End profile widget -->
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
