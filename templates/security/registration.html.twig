{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container-main-contain">
    <h1>Inscription</h1>
    {{ form_start(formRegistration) }}
    {{ form_row(formRegistration.username, {'label' : 'Pseudo', 'attr' : {'placeholder' : 'Choisir un pseudo...'}}) }}
    {{ form_row(formRegistration.email, {'label' : 'Email', 'attr' : {'placeholder' : 'Votre adresse email...'}}) }}
    {{ form_row(formRegistration.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe...'}}) }}
    {{ form_row(formRegistration.confirm_password, {'label' : 'Confirmez', 'attr' : {'placeholder' : 'confirmez le mot de passe...'}}) }}
    <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(formRegistration) }}
</div>
{% endblock %}
